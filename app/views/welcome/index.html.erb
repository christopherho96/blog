<div class ="wrapper wrapper_padding clearfix ">

  <div class="col-2 blog homepage_content">
    <h2>Blog Posts</h2>
    <hr>

    <!-- Loops through all posts and display them in descending order of date-->
    <% @posts.each do |post| %>
      <h3><a href="#"><%= link_to post.title, post %></a></h3>
      <p class="date"><%= post.created_at.strftime("%A, %b %d")%></p>
    <% end %>
  </div>
  <div class="col-1 wrapper wrapper_padding homepage_content projects">
    <h2>Recent Projects</h2>
    <hr style>
    <div class="post_container">
        <% @projects.each do |project| %>
          <div class="article">
            <h3 class="post_title"><%= link_to image_tag(project.image.url(:medium)) , project%></h3>
            <h3><a href="#"><%= link_to project.title, project %></a></h3>
          </div>
        <% end %>
    </div>
  </div>
</div>
