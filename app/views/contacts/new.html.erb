<h1 id ="page_title">Say Hello!</h1>
<div class = "contact-page">
  <div class="skinny_wrapper wrapper_padding white_box">
    <%= form_for @contact do |f| %>
      <%= f.label :name %> <br>
      <%= f.text_field :name, requried: true %>

      <br>

      <%= f.label :email %> <br>
      <%= f.text_field :email, requried: true %>

      <br>

      <%= f.label :message %> <br>
      <%= f.text_area :message, as: :text %>

      <div class="hidden">
        <%= f.label :nickname %> <br>
        <%= f.text_field :nickname, hint: 'leave this field blank' %>
      </div>

      <%= f.submit 'Send Message', class: "button" %>

    <%end%>
  </div>
</div>
